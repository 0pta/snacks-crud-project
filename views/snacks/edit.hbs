
<div class="container">
  <a href="/snacks"> <<< Dive back in</a>
  <div class="row new-row">
    <h1>Edit a snacky-snack!</h2>
  </div>
<form method="PUT" action="/snacks" class="well">
    <div class="row">
      <div class="side-bar col-xs-3">
        <div class="row input-row-label">
          <h3>Image</h3>
        </div>
        <div class="row input-row-label">
          <h3>Name</h3>
        </div>
        <div class="row input-row-label">
          <h3>Description</h3>
        </div>
        <div class="row input-row-label">
          <h3>Rating</h3>
        </div>
      </div>
      <div class="snack-show-col col-xs-5">
        <div class="row input-rows">
          <div class="form-group">
            <input type="text" name="img_url" class="form-control" id="img_url" placeholder="Snack Image URL">
          </div>
        </div>
        <div class="form-group">
          <div class="row input-rows">
            <input type="text" name="name" class="form-control" id="name" placeholder="Snack Name">
          </div>
        </div>
        <div class="row input-rows">
          <div class="form-group">
            <input id="text-input" type="text" name="review_desc" class="form-control" id="review_desc" placeholder="Enter Description">
          </div>
        </div>
        <div class="row input-rows">
          <div class="form-group">
            <input type="number" name="rating" value="0" min="0" max="5" class="form-control" id="rating" placeholder="Rating 0-5">
          </div>
        </div>
        <div class="row input-rows">
          <button type="submit" class="btn btn-default">FILL HOLE</button>
        </div>
      </div>
      <div class="side-bar col-xs-3">
      </div>
    </div>
  </form>
</div>
